.tqb-date-picker
  background-color white
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  color black
  font-size root-font-size
  z-index 1024
  transition all 0.2s
  display flex
  flex-direction column
  -webkit-tap-highlight-color: rgba(0,0,0,0);

  &.static
    position relative
    width 100%

  &.hide
    display none !important

  &.out
    transform translate3d(0,2em,0)
    opacity 0

  .tqb-dp-container
    flex 1
    overflow-y auto
    -webkit-overflow-scrolling touch

  @import "picker/_header.styl"
  @import "picker/_labels.styl"
  @import "picker/_calendar.styl"